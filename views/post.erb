<div class="entry">

<h1><a href="<%= path_to :posts, post %>"><%= post.title %></a></h1> 

<span class="entry-meta">Published at <%= post.publish_date.strftime('%A, %B %d, %Y') %>, tagged with <%= post.tags.collect{ |tag| "<a href='#{path_to :tags, tag}'>#{tag}</a>"}.join(', ') %>.</span>

<div class="text">

<%= post.content  %>

</div>

</div>

