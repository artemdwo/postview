<div id="content">

<div class="entry">

<h1><%= title_path :archive %></h1>

<ul>
<% for post in posts %>
<li>
<%= post.publish_date.strftime('%Y-%m-%d') %> - <strong><%= link_to post.title, archive_path, post, :title => post.title %></strong>
  <span>(<%= post.tags.map{ |tag| link_to tag.capitalize, tags_path, tag, :title => tag.capitalize }.join(', ') %>)</span>
</li>
<% end %>
</ul>

</div>

</div><!-- content -->

<div id="options">

  <div class="entry">

    <h1>Related Tags</h1>

    <ul>
    <% for tag in tags %>
      <li><%= link_to tag.capitalize, tags_path, tag, :title => tag.capitalize %></li>
    <% end %>
    </ul>

  </div>

</div><!-- options -->

